#!/bin/bash
cd "${BASH_SOURCE%/*}"

function validatorInstance() {
    if [ -f ./validator.instance ]; then 
        PARAMS=`cat validator.instance`
    else 
        echo 'You need to run setup first.'
        exit 1
    fi 
}

case $1 in 
    setup)
        PARAMS=`echo $* | awk '{print $2 " " $3 " " $4}'`
        echo $PARAMS
        bash ./setup.sh $PARAMS
        echo "Setup done."
        echo "You can start the validator by running $0 start"
        ;;
    start)
        validatorInstance
        bash ./start.sh $PARAMS
        ;;
    stop)
        validatorInstance
        bash ./stop.sh $PARAMS
        ;;    
esac